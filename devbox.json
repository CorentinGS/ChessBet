{
  "packages": [
    "go@1.22.1",
    "hadolint@2.12.0",
    "air@1.51.0",
    "templ@latest",
    "go-task@3.36.0",
    "wire@0.6.0",
    "gofumpt@0.6.0",
    "gotools@0.18.0",
    "gci@0.13.4",
    "golangci-lint@1.57.2",
    "sqlc@1.26.0",
    "atlas@0.21.1"
  ],
  "env": {
    "GOPATH": "${workspaceRoot}",
    "CGO_CFLAGS_ALLOW": "-Xpreprocessor"
  },
  "shell": {
    "init_hook": [
      "export \"GOROOT=$(go env GOROOT)\"",
      "export PATH=$PATH:$GOPATH/bin"
    ],
    "scripts": {
      "test": "go test ./...",
      "install:go-mod-upgrade": "go install github.com/oligot/go-mod-upgrade@latest",
      "install:betteralign": "go install github.com/dkorunic/betteralign/cmd/betteralign@latest",
      "hadolint": "hadolint ./Dockerfile --ignore DL3018",
      "dev": "task dev",
      "go-upgrade": "go-mod-upgrade",
      "gen": "task generate",
      "lint": "task lint",
      "clean": "task clean"
    }
  }
}
